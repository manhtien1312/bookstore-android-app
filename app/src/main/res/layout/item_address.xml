<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtAddressName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Mạnh Tiến"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/text_gray"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/txtAddressPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0378057198"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDetailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gần cây xăng Ngọc Tảo"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtMapAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xã Ngọc Tảo, Huyện Phúc Thọ, Thành Phố Hà Nội"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtIsDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ mặc định"
            android:textSize="12sp"
            android:textColor="@color/background_blue"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_colored"/>
    </LinearLayout>

    <View
        android:id="@+id/divideBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/text_gray"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

</androidx.cardview.widget.CardView>