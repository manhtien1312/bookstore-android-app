<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="3dp">

    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">

            <stroke
                android:color="@color/background_blue"
                android:width="1dp"/>
            <size
                android:width="16dp"
                android:height="16dp"/>
        </shape>
    </item>

    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp">

        <shape
            android:shape="oval"
            android:useLevel="false">

            <solid android:color="@color/background_blue"/>
        </shape>
    </item>

</layer-list>